{
  "name": "oogiri-bot",
  "version": "2.2.0",
  "description": "slack bot for oogiri",
  "main": "index.js",
  "author": "tocomi",
  "license": "MIT",
  "scripts": {
    "release": "npx release-it",
    "dev:api": "yarn workspace api serve",
    "dev:bot": "yarn workspace slackbot watch",
    "lint": "yarn workspace api lint && yarn workspace slackbot lint",
    "lint:fix": "yarn workspace api lint:fix && yarn workspace slackbot lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md}\" --ignore-path .gitignore",
    "migrate": "prisma migrate dev --schema ./packages/api/prisma/schema.prisma",
    "deploy:api": "yarn workspace api deploy",
    "deploy:bot": "yarn workspace slackbot deploy:heroku",
    "type-check": "yarn workspace api type-check && yarn workspace slackbot type-check"
  },
  "dependencies": {
    "@slack/bolt": "3",
    "@slack/web-api": "^6.2.4",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "emoji-regex": "^10.1.0",
    "firebase-admin": "^10.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.24",
    "@types/node-fetch": "2.6.7",
    "@types/uuid": "^10",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.4",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tsc-watch": "^4.4.0",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "20.19.5",
    "yarn": "4.5.0"
  },
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
