model Team {
  id String @unique @id
  name String
  odais Odai[]
}

model Odai {
  id String @unique @id
  team Team @relation(fields: [teamId], references: [id])
  teamId String
  title String
  type String
  status String
  dueDate DateTime
  imageUrl String?
  createdBy String
  createdAt DateTime
  kotaes Kotae[]
}

model Kotae {
  id String @unique @id
  odai Odai @relation(fields: [odaiId], references: [id])
  odaiId String
  content String
  createdBy String
  createdAt DateTime
  votes Vote[]
}

model Vote {
  id String @unique @id
  kotae Kotae @relation(fields: [kotaeId], references: [id])
  kotaeId String
  rank Int
  cteatedBy String
  createdAt DateTime
}

model Result {
  id String @unique @id
  odaiId String
  kotaeId String
  type String
  point Int
  rank Int
  createdAt DateTime
}